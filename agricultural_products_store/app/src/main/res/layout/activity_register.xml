<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="260dp"
            android:layout_height="201dp"
            android:background="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tendangnhap"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:text="Tên đăng nhập "
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:textColor="@color/xanh_luc"
            android:layout_marginTop="10dp"
            ></TextView>

        <EditText
            android:id="@+id/dangkitk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tendangnhap"
            android:hint="Email hoặc SĐT"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColorHint="@color/purple_700"
            android:layout_marginTop="5dp"
            android:textSize="21dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:drawableRight="@drawable/ic_user"
            android:backgroundTint="@color/xanh_luc"
            android:paddingRight="6dp"
            android:inputType="text"
            ></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dkimatkhau"
            app:layout_constraintTop_toBottomOf="@+id/dangkitk"
            android:text="Mật khẩu "
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:textColor="@color/xanh_luc"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"></TextView>
        <EditText
            android:id="@+id/dkimk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/dkimatkhau"
            android:hint="Mật khẩu "
            android:backgroundTint="@color/xanh_luc"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/purple_700"
            android:textSize="21dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:paddingRight="6dp"
            android:inputType="textPassword"
            ></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nhaplaimk"
            app:layout_constraintTop_toBottomOf="@+id/dkimk"
            android:text="Nhập lại mật khẩu "
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:textColor="@color/xanh_luc"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"></TextView>
        <EditText
            android:id="@+id/nhaplaimkdki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/nhaplaimk"
            android:hint="Nhập lại mật khẩu"
            android:backgroundTint="@color/xanh_luc"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/purple_700"
            android:textSize="21dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:paddingRight="6dp"
            android:inputType="textPassword"
            ></EditText>


        <Button
            android:id="@+id/button_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_login"
            app:layout_constraintTop_toBottomOf="@+id/nhaplaimkdki"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:text="Đăng kí ngay"
            android:textSize="21dp"
            android:padding="10dp">
        </Button>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>